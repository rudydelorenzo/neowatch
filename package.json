{
  "name": "neowatch",
  "description": "A lightweight ES6 and TypeScript compliant change-monitoring library.",
  "version": "0.1.2",
  "private": false,
  "type": "module",
  "main": "./dist/watch.cjs",
  "module": "./dist/watch.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/watch.cjs",
      "import": "./dist/watch.js"
    }
  },
  "scripts": {
    "bump": "bun run scripts/bump.ts",
    "build": "tsup"
  },
  "dependencies": {
    "croner": "^9.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rudydelorenzo/neowatch"
  },
  "license": "MIT"
}